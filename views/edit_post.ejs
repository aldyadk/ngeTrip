<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="container">
        <form method="post" action="/post/edit_post/<%- id%>">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" value="<%- dataPost.title%>">
            </div>
            <div>
                <label for="description">Description</label><br>
                <textarea name="description"><%- dataPost.description%></textarea>
            </div>
            <div>
              <select name="place">
                <% dataPlace.forEach(place => { %>
                  <% if(place.id == dataPost.placeId) {%>
                    <option value="<%- place.id%>" selected> <%- place.placeName %> </option>
                    <% } else {%>
                      <option value="<%- place.id%>"> <%- place.placeName %> </option>
                      <% } %>
                <% }) %>
              </select>
            </div>
            <br><br>
            <input type="submit" name="sumbit" value="Submit">
        </form>
    </div>
</body>

</html>