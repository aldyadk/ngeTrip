<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div>
      <form action="/upload" method="POST">
          <button type="submit" name="button">Create New Place</button>
      </form>
    </div>

    <div>
      <form action="/post" method="POST">
          <button type="submit" name="button">List Post</button>
      </form>
    </div>

    <div>
      <form action="/post/create" method="POST">
          <button type="submit" name="button">Create New Post</button>
      </form>
    </div>

    <h1><%= title %></h1>
    <p>Welcome to
        <%= title %>
    </p>

    <div>
        <table>
            <thead>
                <th>No</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th colspan="2">Action</th>
            </thead>
            <tbody>
                <%
              if (places.length < 1) {
              %>
                    <tr>
                        <td>
                            <p class="flow-text">Tidak ada data</p>
                        </td>
                    </tr>
                    <%
              } else {
                let no = 1;
                places.forEach(place => {
              %>
                        <tr>
                            <td>
                                <%- no%>
                            </td>
                            <td>
                                <%- place.placeName%>
                            </td>
                            <td>
                                <%- place.description%>
                            </td>
                            <td>
                                <img src="<%- place.imagePath%>" alt="<%- place.placeName%>" height="100" width="100">
                            </td>
                            <td><a href="/edit/<%- place.id%>"><img src="/images/edit.png" alt="Edit" height="30" width="30"></a></td>
                            <td><a href="/places/delete/<%- place.id%>"><img src="/images/delete.png" alt="Delete" height="30" width="30"></a></td>
                        </tr>
                        <%
                            no++;
                          })
                        }
                        %>
            </tbody>
        </table>
    </div>
</body>

</html>